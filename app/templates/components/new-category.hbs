{{#if addNewCategory}}
    <div class='container'>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name" class="form-control"}}
        </div>

        <button class="btn btn-default btn-sm"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
