{{#if addNewListing}}
    <div class="container">
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{input value=description id="description" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <!-- <div class="input-group"> -->
            <!-- <span class="input-group-addon">$</span> -->
            <!-- {{input type="text" value=price id="price" class="form-control"}} -->
            {{input value=price id="price" class='form-control'}}
          <!-- </div> -->
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=location id="location" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="contact_info">Contact Info</label>
          {{input value=contact_info id="contact_info" class="form-control"}}
        </div>

        <button class="btn btn-default btn-sm"{{action 'saveListing'}}>Save</button>
      </form>
    </div>
{{else}}

  <div class="categorypagebutton">
    <button class="btn btn-new btn-btn btn-md"{{action 'listingFormShow'}}>New Listing</button>
  </div>
{{/if}}
