{{#if updateCategoryForm}}
  <h4>Update Category</h4>
    <div class='container'>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=category.name id="name" class='form-control'}}
        </div>

        <button class="btn btn-default btn-sm" {{action 'update' category}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-xs btn-btn" {{action 'updateCategoryForm'}}>Update Category</button>
{{/if}}
