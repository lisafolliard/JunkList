{{#if updateListingForm}}
  <h4>Update Listing</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=listing.title id="title" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="description">Description</label>
          {{textarea value=listing.description id="description" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="price">Price</label>
          <div class="input-group">
            <span class="input-group-addon">$</span>
            {{input type="text" value=listing.price id="price" class="form-control"}}
          </div>
        </div>

        <div class="form-group">
          <label for="location">Location</label>
          {{input value=listing.location id="location" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=listing.image id="image" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="contact_info">Contact Info</label>
          {{textarea value=listing.contact_info id="contact_info" class="form-control"}}
        </div>

        <button class="btn btn-success btn-xs" {{action 'update' listing}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-xs btn-primary" {{action 'updateListingForm'}}>Update Listing</button>
{{/if}}
